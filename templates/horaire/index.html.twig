{% extends 'base.html.twig' %}

{% block title %}Horaire index{% endblock %}

{% block body %}
    <h1>Horaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jour</th>
                <th>MorningStartTime</th>
                <th>MorningEndTime</th>
                <th>AfterStartTime</th>
                <th>AfterEndTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horaire in horaires %}
            <tr>
                <td>{{ horaire.id }}</td>
                <td>{{ horaire.Jour }}</td>
                <td>{{ horaire.morningStartTime ? horaire.morningStartTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ horaire.morningEndTime ? horaire.morningEndTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ horaire.afterStartTime ? horaire.afterStartTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ horaire.afterEndTime ? horaire.afterEndTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_horaire_show', {'id': horaire.id}) }}">show</a>
                    <a href="{{ path('app_horaire_edit', {'id': horaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_horaire_new') }}">Create new</a>
{% endblock %}
