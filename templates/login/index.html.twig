{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block title %}Se connecter {% endblock %}
        {% block stylesheets %}
                    <link href="{{ asset('css/formAuth.css') }}" rel="stylesheet" />
                {% endblock %}
        {# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    
<div class="formContainerLeft">
    <div class="heroBanner">
        <h1>BIENVENUE</h1>
    </div>
    <div class="logo">
        <img src="{{ asset('IMG/logo.svg') }}" alt="Garage V.Parrot logo" />
    </div>
</div>

<div class="formContainerRight">

 <div class="formHeading">
        <h1>SE CONNECTER<h1/>
    </div>


    <form action="{{ path('app_login') }}" method="post" class="formBody">

        <input type="text" id="username" name="_username" value="{{ last_username }}"placeholder="E-mail">

   
        <input type="password" id="password" name="_password" placeholder="Mot de passe ">

        {# If you want to control the URL the user is redirected to on success#}
        <input type="hidden" name="_target_path" value="/admin"> 

          <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
 
    </div>
</div>

{% block footer %}
{% endblock %}


{% endblock %}